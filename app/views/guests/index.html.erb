<h2 class="indent-bot2">Guest List</h2>

<table>
  <tr>
    <th>Name</th>
    <th>Code</th>
    <th>Adult guests</th>
    <th>Child guests</th>
    <th>Rsvp date</th>
    <th>Notes</th>
    <th>Private notes</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @guests.each do |guest| %>
  <tr>
    <td><%= guest.name %></td>
    <td><%= guest.code %></td>
    <td><%= guest.adult_guests %></td>
    <td><%= guest.child_guests %></td>
    <td><%= guest.rsvp_date %></td>
    <td><%= guest.notes %></td>
    <td><%= guest.private_notes %></td>
    <td><%= link_to 'Show', guest %></td>
    <td><%= link_to 'Edit', edit_guest_path(guest) %></td>
    <td><%= link_to 'Destroy', guest, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

